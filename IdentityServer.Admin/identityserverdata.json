{
  "IdentityServerData": {
    "IdentityResources": [
      {
        "Name": "roles",
        "Enabled": true,
        "DisplayName": "Roles",
        "UserClaims": [
          "role"
        ]
      },
      {
        "Name": "openid",
        "Enabled": true,
        "Required": true,
        "DisplayName": "Your user identifier",
        "UserClaims": [
          "sub"
        ]
      },
      {
        "Name": "profile",
        "Enabled": true,
        "DisplayName": "User profile",
        "Description": "Your user profile information (first name, last name, etc.)",
        "Emphasize": true,
        "UserClaims": [
          "name",
          "family_name",
          "given_name",
          "middle_name",
          "nickname",
          "preferred_username",
          "profile",
          "picture",
          "website",
          "gender",
          "birthdate",
          "zoneinfo",
          "locale",
          "updated_at"
        ]
      },
      {
        "Name": "email",
        "Enabled": true,
        "DisplayName": "Your email address",
        "Emphasize": true,
        "UserClaims": [
          "email",
          "email_verified"
        ]
      },
      {
        "Name": "address",
        "Enabled": true,
        "DisplayName": "Your address",
        "Emphasize": true,
        "UserClaims": [
          "address"
        ]
      }
    ],
    "ApiScopes": [
      {
        "Name": "mofa_identity_admin_api",
        "DisplayName": "mofa_identity_admin_api",
        "Required": true,
        "UserClaims": [
          "role",
          "name"
        ]
      },
      {
        "Name": "takamolApiScope",
        "DisplayName": "Takamol API",
        "Required": true,
        "UserClaims": [
          "role",
          "name"
        ]
      },
      {
        "Name": "ocelotApiGatewayScope",
        "DisplayName": "Ocelot Api Gateway"
      }
    ],
    "ApiResources": [
      {
        "Name": "mofa_identity_admin_api",
        "Scopes": [
          "mofa_identity_admin_api"
        ]
      },
      {
        "Name": "TakamolApiResource",
        "DisplayName": "Takamol API Resourse",
        "Description ": "Allow the application to access Takamol Api on your behalf",
        "Scopes": [
          "takamolApiScope",
          "ocelotApiGatewayScope"
        ]
      }
    ],
    "Clients": [
      
      
      {
        "ClientId": "mofa_identity_admin",
        "ClientName": "mofa_identity_admin",
        "ClientUri": "https://auth-admin.mofa.gov.sa",
        "AllowedGrantTypes": [
          "authorization_code"
        ],
        "RequirePkce": true,
        "ClientSecrets": [
          {
            "Value": "mofa_admin_client_secret"
          }
        ],
        "RedirectUris": [
          "https://auth-admin.mofa.gov.sa/signin-oidc"
        ],
        "FrontChannelLogoutUri": "https://auth-admin.mofa.gov.sa/signout-oidc",
        "PostLogoutRedirectUris": [
          "https://auth-admin.mofa.gov.sa/signout-callback-oidc"
        ],
        "AllowedCorsOrigins": [
          "https://auth-admin.mofa.gov.sa"
        ],
        "AllowedScopes": [
          "openid",
          "email",
          "profile",
          "roles"
        ]
      },
      {
        "ClientId": "mofa_identity_admin_api_swaggerui",
        "ClientName": "mofa_identity_admin_api_swaggerui",
        "AllowedGrantTypes": [
          "authorization_code"
        ],
        "RequireClientSecret": false,
        "RequirePkce": true,
        "RedirectUris": [
          "https://admin-api.mofa.local/swagger/oauth2-redirect.html"
        ],
        "AllowedScopes": [
          "mofa_identity_admin_api"
        ],
        "AllowedCorsOrigins": [
          "https://admin-api.mofa.local"
        ]
      },
      
      
      {
        "ClientId": "takamolApiClient",
        "ClientName": "takamol Api Client",
        "AllowedGrantTypes": [
          "client_credentials"
        ],
        "RequirePkce": false,
        "AllowRememberConsent": false,
        "ClientSecrets": [
          {
            "Value": "secret"
          }
        ],
        "AllowedScopes": [
          "takamolApiScope",
          "ocelotApiGatewayScope"

        ],
        "AllowedCorsOrigins": [
          "https://ext-wrappers.mofa.gov.sa"
        ]

      }
      
      
    ]
  }
}